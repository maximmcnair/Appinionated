.review
  display block
  overflow hidden

.review__images
  width responsive(460, 940)
  margin 0 responsive(20, 940) 0 0
  float left

.review__desc
  width responsive(460, 940)
  float right
  margin 0
  p
    max-width 500px

.review:nth-of-type(2n)
  .review__images
    float right
    margin 0
  .review__desc
    float left
    margin 0 responsive(20, 940) 0 0

.review--text--dark
  color #454545
  a
    color #454545
    font-style italic

.review--text--light
  color #ffffff
  a
    color #ffffff
    font-style italic
  a.btn
  .btn
    background-color rgba(350, 350, 350, 0.2)

.review--landscape
  padding 300px 0px
  .review__image__wrapper
    background url('/imgs/phone-landscape-white.png')
    width 460px
    height 230px
  &.review--phone--dark
    .review__image__wrapper
      background url('/imgs/phone-landscape-black.png')
  .slides
    width 391px
    height 205px
    padding-left 68px
    padding-top 24px

.review--portrait
  padding 200px 0px
  .review__image__wrapper
    background url('/imgs/phone-portrait-white.png')
    width 230px
    height 500px
    margin 0 auto
  &.review--phone--dark
    .review__image__wrapper
      background url('/imgs/phone-portrait-black.png')
  .slides
    width 205px
    height 394px
    padding-top 70px
    padding-left 23px
  h2
    margin-top 90px

.flex-control-nav
.flex-direction-nav
  display none

.slides
  overflow hidden